<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.hse.egorov.reading_tracker">

    <uses-feature android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.LightDarkTitle"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.SignUpSignInActivity"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/Theme.NoTitle"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.login.SignUpEmailActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.LightDarkTitle" />
        <activity android:name=".ui.session.SessionLibraryActivity" />
        <activity android:name=".ui.session.SessionInfoActivity" />
        <activity android:name=".ui.AllTimeStatisticsActivity" />
        <activity
            android:name=".ui.login.SignUpPersonalInfoActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".ui.login.ChooseSignUpWayActivity"
            android:theme="@style/Theme.NoTitle" />
        <activity
            android:name=".ui.login.SignInActivity"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.LightDarkTitle"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".ui.login.SignUpCodeActivity" />
    </application>

</manifest>