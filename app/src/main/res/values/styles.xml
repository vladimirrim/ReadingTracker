<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Theme.LightDarkTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="android:listSelector">@drawable/spinner_ripple</item>
    </style>

    <style name="Theme.ManualTimeSessionTimeChange" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="android:listSelector">@drawable/spinner_ripple</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimary</item>
    </style>


    <style name="Theme.NoTitle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AddingBookLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="colorControlNormal">#802F5870</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="pink_18sp">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="pink_36sp">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="pink_64sp">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#802F5870</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="action_sign_in">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="action_sign_up">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#2F5870</item>
    </style>

    <style name="start_session_button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/start_session_color</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="sign_up_form">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#802F5870</item>
    </style>

    <style name="sign_up_action">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="dark_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2F5870</item>
    </style>

    <style name="dark_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#2F5870</item>
    </style>

    <style name="dark_18sp">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#2F5870</item>
    </style>

    <style name="sign_up_with_email">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="gray_42sp">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="dark_20sp_80alpha">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#802F5870</item>
    </style>

    <style name="dark_14sp_80alpha">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#802F5870</item>
    </style>

    <style name="dark_24sp">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#2F5870</item>
    </style>

</resources>
