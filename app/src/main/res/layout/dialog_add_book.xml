<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/findByISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="68dp"
        android:text="@string/find_by_isbn"
        android:textAppearance="@style/dark_20sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/findByName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="68dp"
        android:text="@string/find_by_name"
        android:textAppearance="@style/dark_20sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/manualAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="68dp"
        android:text="@string/manual_add"
        android:textAppearance="@style/dark_20sp" />
</android.support.v7.widget.LinearLayoutCompat>